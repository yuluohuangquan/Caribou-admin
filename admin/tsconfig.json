{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.buildcache",
    "module": "esnext",
    "lib": [
      "dom",
      "es7"
    ],
    "target": "es6",
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "suppressExcessPropertyErrors": true,
    "paths": {},
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "build"]
}
